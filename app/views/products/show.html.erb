<div class="container-show">
  <div class="card-show">
      <div class="photo-show" style="background: url('https://images.unsplash.com/photo-1498766707495-856f300a5821?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=fcbd78da5b0ccb1fcf6e54a2e5e51f63&auto=format&fit=crop&w=1651&q=80');">
      </div>
        <div class="texte-show">
          <h2><%= @product.name %></h2>
          <p> Description : <%= @product.description %></p>
          <p> Prix : <%= @product.price %> €/Unité (Gramme)</p>
          <form class="new_order_item" id="new_order_item" action="/order_items" accept-charset="UTF-8" method="post">
            <%= form_for @order_item do |f| %>
              <%= f.hidden_field :product_id, value: @product.id %>
              <%= f.number_field :quantity %>
              <%= f.submit "Ajouter au panier", class: "btn-index" %>
            <% end %>
          </form>
        </div>
  </div>
</div>
