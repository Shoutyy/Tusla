
<div class="searchbar-index">
    <%= form_tag products_path, method: "get", id: "search-products-form" do %>
      <%= text_field_tag :name, params[:name], class: "form-control",
      placeholder: "Search for a product", id: 'searchbar-products', value: params[:name] %>
      <%= select_tag :category, options_for_select([["Any category", nil], "Alimentaire", "Medicament", "Ingredient"], params[:category]) %>
      <%= submit_tag "Filter", class: "btn-index" %>
    <% end %>
</div>

<div class="container-index">
    <div class="cards-index">
      <% @products.each do |product| %>
          <div class="card-index">
              <div class="photo-index" style="background: url('https://images.unsplash.com/photo-1503262028195-93c528f03218?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=c3f919b2d1bf7d9a8d2746781dbea799&auto=format&fit=crop&w=1651&q=80');">
              </div>
              <div class="texte-index">
                <h2><%= product.name %></h2>
                <p><%= product.price %> â‚¬</p>
                <p><%= product.category.name %></p>
                <p><%= product.description %></p>
              </div>
          </div>
      <% end %>
    </div>
</div>
