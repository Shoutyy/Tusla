<div class="margin-top">
</div>
<div class="container-new">
  <div class="container-new-guide">
    <div class="new-product-guide">
      <h2> Bonne pratique </h2>
      <div class="new-li">
        <li> Produit a base de cdb </li>
        <li> Pas de beuteu en photo </li>
        <li> Blablabla </li>
        <li> More blabla </li>
        <li> Coucou </li>
      </div>
    </div>
  </div>
  <div class="title-new">
    <h1>Add a new product</h1>
  </div>
  <div class="new-input">
    <% if @product.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%= simple_form_for @product do |f| %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :stock %>
    <%= f.association :category, as: :radio_buttons %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit class: "btn btn-green form-control" %>
    <% end %>
  </div>
</div>

