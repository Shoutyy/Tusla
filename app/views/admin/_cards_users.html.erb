<div class="admin-title">
  <h1> Utilisateur </h1>
</div>
<div class="admin-container">
  <div class="admin-cards">
      <% @users.each do |user| %>
          <div class="admin-card">
              <div class="texte-admin">
                <p>Name:<%= user.first_name %>
                <%= user.last_name %>,
                Email:<%= user.email %>,
                <%= user.id %></p>
                <%= link_to "Destroy", admin_destroy_user_path(user), method: :delete, data: { confirm: "You sure?" } %></p>
              </div>
          </div>
      <% end %>
    </div>
</div>
