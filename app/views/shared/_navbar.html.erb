<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <div class="dropdown">
          <%= link_to "Produits", products_path(category: nil), class: "navbar-wagon-link" %>
      <div class="dropdown-content">
        <%= link_to "Alimentaire", products_path(category: "Alimentaire") %>
        <%= link_to "Medicament", products_path(category: "Medicament") %>
        <%= link_to "Ingredient", products_path(category: "Ingredient") %>
      </div>
    </div>

    <% if user_signed_in? %>

      <%= link_to "#{current_order.order_item.size} Panier", cart_path, class: "fas fa-shopping-cart" %>
      <!-- Links when logged in -->
      <% if current_user.admin? %>
      <%= link_to "Admin", "/admin", class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>

      <%= link_to "Home", "/", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Profile", "/profile", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" do %>
        <%= t(".sign_out", default: "Deconnexion") %>
      <% end %>

      <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to "Home", "/", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_in", default: "Connexion"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <%= link_to "Produits", products_path(category: nil), class: "navbar-wagon-burger" %>
        <% if user_signed_in? %>

          <%= link_to "#{current_order.order_item.size} Panier", cart_path, class: "fas fa-shopping-cart navbar-wagon-burger" %>
          <!-- Links when logged in -->
          <% if current_user.admin? %>
          <%= link_to "Admin", "/admin", class: "navbar-wagon-burger" %>
          <% end %>

          <%= link_to "Home", "/", class: "navbar-wagon-burger" %>
          <%= link_to "Profile", "/profile", class: "navbar-wagon-burger" %>
          <%= link_to destroy_user_session_path, method: :delete, class: "navbar-wagon-burger" do %>
            <%= t(".sign_out", default: "Deconnexion") %>
          <% end %>

        <% else %>
          <!-- Login link (when logged out) -->
          <%= link_to "Home", "/", class: "navbar-wagon-burger" %>
          <%= link_to t(".sign_in", default: "Connexion"), new_user_session_path, class: "navbar-wagon-burger" %>
        <% end %>
      </ul>
    </div>
  </div>
</div>

